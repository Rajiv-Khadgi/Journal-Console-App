@page "/"
@inject UserService UserService
@inject NavigationManager Navigation

<PageTitle>JournalApp - Your Secure Daily Companion</PageTitle>


<!-- Hero Section -->
<section class="hero-section py-5" style="background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6 text-white">
                <h1 class="display-4 fw-bold mb-4">Your Secure Daily Companion</h1>
                <p class="lead mb-4 opacity-90">Write. Reflect. Analyze. Grow.</p>
                <p class="mb-5 opacity-80">
                    A private, secure journaling app that keeps your thoughts safe with local storage 
                    and PIN protection. Your data stays on your device - always.
                </p>
                <div class="d-flex flex-wrap gap-3">
                    <NavLink href="create" class="btn btn-light btn-lg px-4 py-3">
                        <i class="bi bi-pencil-square me-2"></i>Start Journaling
                    </NavLink>
                    <a href="#features" class="btn btn-outline-light btn-lg px-4 py-3">
                        <i class="bi bi-info-circle me-2"></i>Learn More
                    </a>
                </div>
            </div>
            <div class="col-lg-6 mt-5 mt-lg-0">
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-3">Welcome to Your Journal</h5>
                        <div class="journal-preview p-3 bg-light rounded">
                            <p class="mb-2"><strong>Today's Date:</strong> @DateTime.Now.ToString("MMMM dd, yyyy")</p>
                            <p class="mb-2"><strong>Daily Prompt:</strong> "What are you grateful for today?"</p>
                            <p class="mb-0"><strong>Tip:</strong> Try writing for just 5 minutes each day</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-5 bg-light">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3">Powerful Features</h2>
            <p class="lead text-muted">Everything you need for meaningful journaling</p>
        </div>
        
        <div class="row g-4">
            @foreach (var feature in features)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm feature-card">
                        <div class="card-body p-4">
                            <div class="feature-icon mb-3">
                                <i class="bi @feature.Icon fs-2 text-primary"></i>
                            </div>
                            <h5 class="card-title mb-2">@feature.Title</h5>
                            <p class="card-text text-muted">@feature.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Journaling Journey Section -->
<section class="py-5">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3">Start Your Journaling Journey</h2>
