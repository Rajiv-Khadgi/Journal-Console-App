    private async Task ShowDeleteConfirm(int id)
    {
        // Check limit first
        canDeleteToday = await LimitService.CanDeleteAsync();
        if (!canDeleteToday)
        {
            limitErrorMessage = "You have already deleted an entry today. You can only delete one entry per day.";
            StateHasChanged();
            return;
        }

        var entry = await JournalService.GetEntryByIdAsync(id);
        if (entry != null)
        {
            entryToDelete = entry; // Show the modal
            StateHasChanged();
        }
    }

    private void CancelDelete()
    {
        entryToDelete = null;
        StateHasChanged();
    }

    private async Task ConfirmDelete()
    {
        if (entryToDelete != null)
        {
            // Actually delete the entry
            await JournalService.DeleteEntryAsync(entryToDelete);

            // Refresh the list
            await LoadEntriesAsync();

            // Close the modal
            entryToDelete = null;
            canDeleteToday = await LimitService.CanDeleteAsync();
            StateHasChanged();
        }
    }



