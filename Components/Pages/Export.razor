                <div class="export-options">
                    <div class="export-option @(exportType == ExportType.DateRange ? "selected" : "")"
                         @onclick="() => SelectExportType(ExportType.DateRange)">
                        <div class="option-icon">
                            <i class="bi bi-calendar-range"></i>
                        </div>
                        <div class="option-content">
                            <h6>Date Range</h6>
                            <p class="text-muted small mb-0">Select specific dates</p>
                        </div>
                        <div class="option-check">
                            <i class="bi bi-check-circle-fill"></i>
